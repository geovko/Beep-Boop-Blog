<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2><a href="/posts/{{post.id}}">{{post.title}}</a></h2>
      <p>{{content}}</p>
      <p>{{user_id}}
        1{{user}}
        2{{post.user}}
        3{{post.user.name}}
        -
        {{dateCreated}}</p>
    </div>
    <div>
      <h3>
        Comments:
      </h3>
      {{#each comments}}
        <div class="col-md-7">
          <p> {{content}}</p>
        </div>
        <div>
          <p>{{user.name}} - {{dateCreated}}</p>
        </div>
      {{/each}}
    </div>
  </div>
{{/each}}
<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
        <a href="/posts/{{post.id}}">{{post.name}}</a>
      </h2>
      <p>Created by
        {{post.user.name}}
        on
        {{post.dateCreated}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{post.content}}
      </p>
    </div>
    <div>
      <h3>
        Comments:
      </h3>
      {{#each comments as |comment|}}
        <div>
          <p>Created by
            {{comment.user.name}}
            on
            {{comment.dateCreated}}</p>
        </div>
        <div class="col-md-7">
          <p>
            {{comment.content}}</p>
        </div>
      {{/each}}
    </div>
  </div>
{{/each}}
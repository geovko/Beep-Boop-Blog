<!-- Loop over each object in the projects array -->
{{#each posts}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2><a href="/posts/{{post.id}}">{{post.title}}</a></h2>
      <p>{{post.content}}</p>
      <p>{{post.user.name}}
        -
        {{post.dateCreated}}</p>
    </div>
    <div>
      {{! <h3>
        Comments:
      </h3> }}
      {{#each comments as |comment|}}
        <div class="col-md-7">
          <p>Comment: {{comment.content}}</p>
          <p>{{comment.user.name}}
            -
            {{comment.dateCreated}}</p>
        </div>
        <div>

        </div>
      {{/each}}
    </div>
  </div>
{{/each}}
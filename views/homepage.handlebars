<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2><a href="/posts/{{post.id}}">{{post.title}}</a></h2>
      <p>{{post.content}}</p>
      <p>{{post.user.name}} - {{dateCreated}}</p>
    </div>
    <div>
      <h3>
        Comments:
      </h3>
      {{#each comment}}
        <div class="col-md-7">
          <p> {{comment.content}}</p>
        </div>
        <div>
          <p>{{comment.user.name}} - {{dateCreated}}</p>
        </div>
      {{/each}}
    </div>
  </div>
{{/each}}
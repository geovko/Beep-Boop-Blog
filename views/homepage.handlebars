<!-- Loop over each object in the projects array -->
{{#each posts}}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2><a href="/posts/{{id}}">{{title}}</a></h2>
      <p>{{content}}</p>
      <p>{{user.name}}
        -
        {{dateCreated}}</p>
    </div>
    <div>
      {{! <h3>
        Comments:
      </h3> }}
      {{#each comments as |comment|}}
        <div class="col-md-7">
          <p>Comment: {{content}}</p>
          <p>1:{{comment.user_id}}, 2:{{comment.user.name}}, 3:{{user.name}}
            -
            {{dateCreated}}</p>
        </div>
        <div>

        </div>
      {{/each}}
    </div>
  </div>
{{/each}}
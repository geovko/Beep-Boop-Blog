<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>{{user.name}} - {{dateCreated}}</p>
  <p>+_+_+_+_+_+_+_+_+_+</p>
</div>

{{#each comments as |comment|}}
  <div class="text-center">
    <div class="col-md-7">
      <p> {{comment.content}}</p>
      <p> {{content}}</p>
    </div>
    <p>{{comment.user_id.name}} - {{dateCreated}}</p>
    <p>{{comment.user_id}}</p>
  </div>
{{/each}}

<div class="col-md-6">
  <h3>Leave a Comment:</h3>

  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-content">Content:</label>
      <textarea
        class="form-input"
        id="comment-content"
        name="comment-content"
      ></textarea>
    </div>
    <div class="form-group">
      <button
        type="submit"
        class="btn btn-primary"
        data-id={{id}}
      >Submit!</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>